{
    "name": "beekalam/nira-gateway",
    "description": "Helper classes to connect to Nira Rerservation API.",
    "keywords": [
        "beekalam",
        "nira-gateway"
    ],
    "homepage": "https://github.com/beekalam/nira-gateway",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Reza mansouri",
            "email": "beekalam@gmail.com",
            "homepage": "https://m-mansouri.ir",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^7.0",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Beekalam\\NiraGateway\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beekalam\\NiraGateway\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/beekalam"
        }
    ]
}
